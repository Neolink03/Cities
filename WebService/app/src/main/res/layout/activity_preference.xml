<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lp.webservice.Activity.PreferenceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_title"
        android:textColor="#000"
        android:textSize="18sp" />

    <CheckBox
        android:text="@string/postalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postal_code_filter_checkbox"
        android:checked="false" />

    <CheckBox
        android:text="@string/regionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region_code_filter_checkbox" />

    <CheckBox
        android:text="@string/gps_coodinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gps_coordinates_filter_group_checkbox" />

    <CheckBox
        android:text="@string/inhabitantNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inhabitant_number_filter_checkbox" />
</LinearLayout>
